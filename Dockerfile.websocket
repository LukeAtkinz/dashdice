# WebSocket Server Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy WebSocket server files
COPY go-services/websocket-server/package.json ./
COPY go-services/websocket-server/tsconfig.json ./
COPY go-services/websocket-server/server.ts ./

# Install dependencies
RUN npm install

# Expose WebSocket port
EXPOSE 8090

# Start the WebSocket server
CMD ["npm", "start"]
