{
  "name": "DashDice",
  "integrations": {
    "capacitor": {
      "appId": "com.dashdice.app",
      "appName": "DashDice",
      "bundledWebRuntime": false,
      "webDir": "out"
    }
  },
  "type": "custom",
  "hooks": {
    "build:before": "CAPACITOR_BUILD=true npm run configure-api-static",
    "build:after": "npm run revert-api-static"
  },
  "build": {
    "command": "CAPACITOR_BUILD=true npm run build",
    "outputDirectory": "out"
  },
  "serve": {
    "command": "npm run dev",
    "port": 3000
  }
}
